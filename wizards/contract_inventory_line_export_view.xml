<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_contract_inventory_line_export_wizard" model="ir.ui.view">
        <field name="name">contract.inventory.line.export.wizard.form</field>
        <field name="model">contract.inventory.line.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Export inventára">
                <field name="inventory_line_ids" invisible="1"/>
                <footer>
                    <button name="action_export_pdf" 
                            string="Export to PDF" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancel" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_contract_inventory_line_export_wizard" model="ir.actions.act_window">
        <field name="name">Export inventára</field>
        <field name="res_model">contract.inventory.line.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_contract_inventory_line"/>
        <field name="binding_view_types">form,list</field>
    </record>
</odoo>