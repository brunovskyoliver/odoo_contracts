<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Wizard Form View -->
        <record id="customer_invoice_attachment_wizard_form" model="ir.ui.view">
            <field name="name">customer.invoice.attachment.wizard.form</field>
            <field name="model">customer.invoice.attachment.wizard</field>
            <field name="arch" type="xml">
                <form string="PDF merge - Odberateľské faktúry">
                    <field name="selection_mode" invisible="1"/>
                    <field name="state" invisible="1"/>
                    
                    <!-- Date Range Selection Mode -->
                    <group invisible="selection_mode != 'date_range' or state != 'draft'" string="Výber podľa dátumu daňovej povinnosti">
                        <group>
                            <field name="date_from" string="Dátum daňovej povinnosti od"/>
                            <field name="date_to" string="Dátum daňovej povinnosti do"/>
                        </group>
                        <group>
                            <field name="partner_ids" widget="many2many_tags" string="Zákazníci (voliteľné)"/>
                        </group>
                    </group>
                    
                    <group invisible="selection_mode != 'date_range' or state != 'draft'">
                        <button name="action_load_by_date_range" 
                                string="Načítať faktúry" 
                                type="object" 
                                class="btn-secondary"
                                icon="fa-search"/>
                    </group>
                    
                    <!-- Summary (shown for both modes) -->
                    <group invisible="state != 'draft'">
                        <group string="Výber">
                            <field name="move_count" string="Vybrané faktúry"/>
                            <field name="attachment_count" string="S PDF prílohami"/>
                            <field name="missing_attachment_count" string="Bez PDF príloh"/>
                        </group>
                        <group string="Options">
                            <field name="batch_size" invisible="1"/>
                        </group>
                    </group>
                    
                    <!-- Show missing attachment info if any -->
                    <group invisible="not missing_attachment_info or state != 'draft'" string="Faktúry bez PDF prílohy">
                        <field name="missing_attachment_info" nolabel="1" readonly="1" widget="text"/>
                    </group>

                    <group invisible="state != 'processing'">
                        <div class="alert alert-warning" role="alert">
                            <i class="fa fa-spinner fa-spin"/> Spracovávanie... Prosím počkajte.
                        </div>
                        <field name="progress" widget="progressbar"/>
                    </group>
                    
                    <group invisible="state != 'done'">
                        <div class="alert alert-success" role="alert">
                            <i class="fa fa-check-circle"/> PDF úspešne vygenerované! Kliknite na tlačidlo nižšie pre stiahnutie.
                        </div>
                        <div class="mt-2 mb-2">
                            <strong>Na stiahnutie</strong><br/>
                            <field name="download_url" widget="url" readonly="1"/>
                        </div>
                        <field name="error_message" invisible="not error_message" readonly="1"/>
                    </group>
                    
                    <group invisible="state != 'error'">
                        <div class="alert alert-danger" role="alert">
                            <i class="fa fa-exclamation-triangle"/> Pri generovaní PDF došlo k chybe.
                        </div>
                        <field name="error_message" readonly="1"/>
                    </group>
                    
                    <field name="state" invisible="1"/>
                    <field name="move_ids" invisible="1"/>
                    <footer>
                        <button name="action_generate_merged_pdf" 
                                string="Generovať zlúčené PDF" 
                                type="object" 
                                class="btn-primary"
                                invisible="state not in ('draft',)"/>
                        <button name="action_download_result" 
                                string="Stiahnuť PDF" 
                                type="object" 
                                class="btn-primary"
                                invisible="state != 'done'"/>
                        <button name="action_retry" 
                                string="Skúsiť znova" 
                                type="object" 
                                class="btn-secondary"
                                invisible="state != 'error'"/>
                        <button string="Zavrieť" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <!-- Server Action to open the wizard (from list selection) -->
        <record id="action_customer_invoice_attachment_wizard" model="ir.actions.act_window">
            <field name="name">Zlúčiť PDF faktúr</field>
            <field name="res_model">customer.invoice.attachment.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_view_types">list,form</field>
            <field name="domain">[('move_type', 'in', ('out_invoice', 'out_refund'))]</field>
        </record>
        
        <!-- Menu Action to open wizard directly (for date range selection) -->
        <record id="action_customer_invoice_attachment_wizard_menu" model="ir.actions.act_window">
            <field name="name">Zlúčiť PDF faktúr podľa dátumu daňovej povinnosti</field>
            <field name="res_model">customer.invoice.attachment.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'default_selection_mode': 'date_range'}</field>
        </record>
        
        <!-- Menu Item - under Accounting/Customers (Receivables) -->
        <menuitem id="menu_customer_invoice_attachment_wizard"
            name="Zlúčiť PDF faktúr"
            parent="account.menu_finance_receivables"
            action="action_customer_invoice_attachment_wizard_menu"
            sequence="31"/>

        <!-- Merged PDF List View -->
        <record id="customer_invoice_merged_pdf_tree" model="ir.ui.view">
            <field name="name">customer.invoice.merged.pdf.tree</field>
            <field name="model">customer.invoice.merged.pdf</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="invoice_count"/>
                    <field name="page_count"/>
                    <field name="create_date"/>
                    <button name="action_download" string="Stiahnuť" type="object" icon="fa-download"/>
                </list>
            </field>
        </record>

        <record id="customer_invoice_merged_pdf_form" model="ir.ui.view">
            <field name="name">customer.invoice.merged.pdf.form</field>
            <field name="model">customer.invoice.merged.pdf</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_download" string="Stiahnuť PDF" type="object" class="btn-primary"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="invoice_count"/>
                                <field name="page_count"/>
                            </group>
                            <group>
                                <field name="create_date"/>
                                <field name="attachment_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Zahrnuté faktúry">
                                <field name="move_ids" nolabel="1"/>
                            </page>
                            <page string="Poznámky" invisible="not notes">
                                <field name="notes" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action for merged PDFs list -->
        <record id="action_customer_invoice_merged_pdf" model="ir.actions.act_window">
            <field name="name">Zlúčené PDF faktúr</field>
            <field name="res_model">customer.invoice.merged.pdf</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu Item for merged PDFs archive -->
        <menuitem id="menu_customer_invoice_merged_pdf"
            name="Archív zlúčených PDF"
            parent="account.menu_finance_receivables"
            action="action_customer_invoice_merged_pdf"
            sequence="32"/>
        
    </data>
</odoo>
