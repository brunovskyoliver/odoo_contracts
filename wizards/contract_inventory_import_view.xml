<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_contract_inventory_import_form" model="ir.ui.view">
        <field name="name">contract.inventory.import.wizard.form</field>
        <field name="model">contract.inventory.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Inventory">
                <group>
                    <field name="import_file" filename="filename"/>
                    <field name="filename" invisible="1"/>
                </group>
                <footer>
                    <button string="Import" name="action_import" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_contract_inventory_import" model="ir.actions.act_window">
        <field name="name">Import Inventory</field>
        <field name="res_model">contract.inventory.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_contract_inventory_import"
        name="Import Inventory"
        action="action_contract_inventory_import"
        parent="contract.menu_contract_inventory_root"
        groups="account.group_account_manager"
        sequence="30"/>
</odoo>