<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Selection list view for inventory lines (for wizard) -->
    <record id="contract_inventory_line_selection_list_view" model="ir.ui.view">
        <field name="name">contract.inventory.line.selection.list</field>
        <field name="model">contract.inventory.line</field>
        <field name="arch" type="xml">
            <list string="Vybrať inventárne riadky" 
                  multi_edit="1"
                  create="0"
                  delete="0">
                <field name="product_id"/>
                <field name="location_id"/>
                <field name="quantity"/>
                <field name="uom_id"/>
                <field name="serial_number"/>
                <field name="contract_line_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Wizard form view -->
    <record id="view_contract_inventory_create_rental_wizard_form" model="ir.ui.view">
        <field name="name">contract.inventory.create.rental.wizard.form</field>
        <field name="model">contract.inventory.create.rental.wizard</field>
        <field name="arch" type="xml">
            <form string="Vytvoriť prenájom z inventára">
                <sheet>
                    <div class="oe_title">
                        <h1>Vytvoriť riadky zmluvy prenájmu</h1>
                    </div>
                    <group>
                        <group>
                            <field name="inventory_id" readonly="1"/>
                            <field name="partner_id"/>
                            <field name="date_start"/>
                        </group>
                        <group>
                            <field name="create_new_contract" widget="boolean_toggle"/>
                            <field name="contract_id" 
                                   invisible="create_new_contract"
                                   options="{'no_create': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Inventárne riadky na pridanie" name="lines">
                            <field name="line_ids" 
                                   widget="many2many"
                                   domain="[('inventory_id', '=', inventory_id), ('contract_line_id', '=', False)]"
                                   options="{'no_create': True}">
                                <list string="Inventárne riadky" create="0" delete="0">
                                    <field name="product_id"/>
                                    <field name="location_id"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="serial_number"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_create_rental_lines" 
                            string="Vytvoriť riadky prenájmu" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Zrušiť" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open wizard -->
    <record id="action_contract_inventory_create_rental_wizard" model="ir.actions.act_window">
        <field name="name">Vytvoriť prenájom</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">contract.inventory.create.rental.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
