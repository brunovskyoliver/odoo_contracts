<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_contract_inventory_bulk_return_wizard_line_tree" model="ir.ui.view">
        <field name="name">contract.inventory.bulk.return.wizard.line.tree</field>
        <field name="model">contract.inventory.bulk.return.wizard.line</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="inventory_line_id" 
                       domain="[('inventory_id', '=', parent.inventory_id)]"
                       options="{'no_create': True}"/>
                <field name="product_id" readonly="1"/>
                <field name="available_qty"/>
                <field name="return_qty"/>
                <field name="uom_id" readonly="1"/>
            </list>
        </field>
    </record>

    <record id="view_contract_inventory_bulk_return_wizard_form" model="ir.ui.view">
        <field name="name">contract.inventory.bulk.return.wizard.form</field>
        <field name="model">contract.inventory.bulk.return.wizard</field>
        <field name="arch" type="xml">
            <form string="Vrátiť produkty do skladu">
                <sheet>
                    <div class="oe_title">
                        <label for="warehouse_id" class="oe_edit_only"/>
                        <h1><field name="warehouse_id" options="{'no_create': True}" placeholder="Vyberte sklad..."/></h1>
                    </div>
                    <group>
                        <field name="inventory_id" invisible="1"/>
                    </group>
                    <notebook>
                        <page string="Produkty na vrátenie" name="products">
                            <field name="line_ids" context="{'default_inventory_id': inventory_id}"/>
                            <button type="object" 
                                    name="action_add_all_lines" 
                                    string="Pridať všetky riadky" 
                                    class="oe_highlight"/>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_return_to_warehouse" 
                            string="Vrátiť na sklad" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Zrušiť" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_contract_inventory_bulk_return_wizard" model="ir.actions.act_window">
        <field name="name">Vrátiť produkty do skladu</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">contract.inventory.bulk.return.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
