<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="contract_date_update_wizard_view" model="ir.ui.view">
        <field name="name">contract.date.update.wizard.form</field>
        <field name="model">contract.date.update.wizard</field>
        <field name="arch" type="xml">
            <form string="Update Contract Dates">
                <group>
                    <field name="update_date"/>
                </group>
                <footer>
                    <button name="action_update_dates" string="Update" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_contract_date_update_wizard" model="ir.actions.act_window">
        <field name="name">Update Contract Dates</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">contract.date.update.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>