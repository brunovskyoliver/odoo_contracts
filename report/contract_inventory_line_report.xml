<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_contract_inventory_lines">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Položky inventára</h2>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Produkt</th>
                                <th>Umiestnenie</th>
                                <th>Množstvo</th>
                                <th>Dátum pridania</th>
                                <th>Stav</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="docs" t-as="line">
                                <td><span t-field="line.product_id.name"/></td>
                                <td><span t-field="line.location_id.name"/></td>
                                <td><span t-field="line.quantity"/> <span t-field="line.uom_id.name"/></td>
                                <td><span t-field="line.date_added"/></td>
                                <td><span t-field="line.state"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>