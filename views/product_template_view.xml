<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend product.template form to add quantity alert fields -->
    <record id="product_template_quantity_alert_form" model="ir.ui.view">
        <field name="name">product.template.quantity.alert.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Upozornenie na zásoby" name="quantity_alerts">
                    <group string="Konfigurácia upozornenia na nízku zásobu">
                        <field name="alert_qty_enabled" widget="boolean_toggle"/>
                        <field name="minimum_alert_qty"/>
                        <field name="alert_frequency_per_week"/>
                    </group>
                    <group string="Popis">
                        <div>
                            <p><strong>Upozornenie na zásoby:</strong> Zapnite túto možnosť, aby ste dostali upozornenia emailom, keď je skladová zásoby produktu nižšia ako minimálna nastavená hodnota.</p>
                            <p><strong>Minimálna zásoby:</strong> Úroveň zásob, pri ktorej sa má poslať upozornenie (predvolené: 2)</p>
                            <p><strong>Frekvencia upozornenia:</strong> Koľkokrát za týždeň sa má poslať upozornenie (predvolené: 1 = raz za týždeň)</p>
                        </div>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
