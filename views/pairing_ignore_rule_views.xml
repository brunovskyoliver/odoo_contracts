<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View for Pairing Ignore Rules -->
    <record id="pairing_ignore_rule_list" model="ir.ui.view">
        <field name="name">pairing.ignore.rule.list</field>
        <field name="model">pairing.ignore.rule</field>
        <field name="arch" type="xml">
            <list string="Pravidlá na ignorovanie" multi_edit="True">
                <field name="name"/>
                <field name="match_type"/>
                <field name="supplier_id"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View for Pairing Ignore Rules -->
    <record id="pairing_ignore_rule_form" model="ir.ui.view">
        <field name="name">pairing.ignore.rule.form</field>
        <field name="model">pairing.ignore.rule</field>
        <field name="arch" type="xml">
            <form string="Pravidlo na ignorovanie">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="match_type"/>
                        <field name="supplier_id"/>
                        <field name="active"/>
                    </group>
                    <div class="alert alert-info">
                        <p>
                            <strong>Typ zhody:</strong>
                            <ul>
                                <li><strong>Presne:</strong> Popis sa musí zhodovať presne (bez ohľadu na malé/veľké písmená)</li>
                                <li><strong>Obsahuje:</strong> Popis musí obsahovať zadaný text</li>
                                <li><strong>Začína s:</strong> Popis musí začínať zadaným textom</li>
                            </ul>
                        </p>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View for Pairing Ignore Rules -->
    <record id="pairing_ignore_rule_search" model="ir.ui.view">
        <field name="name">pairing.ignore.rule.search</field>
        <field name="model">pairing.ignore.rule</field>
        <field name="arch" type="xml">
            <search string="Vyhľadať pravidlá na ignorovanie">
                <field name="name"/>
                <field name="supplier_id"/>
                <filter string="Aktívne" name="active" domain="[('active', '=', True)]"/>
                <filter string="Neaktívne" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Presne" name="exact" domain="[('match_type', '=', 'exact')]"/>
                <filter string="Obsahuje" name="contains" domain="[('match_type', '=', 'contains')]"/>
                <filter string="Začína s" name="startswith" domain="[('match_type', '=', 'startswith')]"/>
                <group expand="0" string="Zoskupiť podľa">
                    <filter string="Typ zhody" name="group_match_type" context="{'group_by': 'match_type'}"/>
                    <filter string="Dodávateľ" name="group_supplier" context="{'group_by': 'supplier_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Pairing Ignore Rules -->
    <record id="action_pairing_ignore_rules" model="ir.actions.act_window">
        <field name="name">Pravidlá na ignorovanie</field>
        <field name="res_model">pairing.ignore.rule</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Žiadne pravidlá na ignorovanie
            </p>
            <p>
                Tu môžete definovať popisy faktúr, ktoré sa majú ignorovať pri párovaní s produktami.
                <br/>
            </p>
        </field>
    </record>

    <!-- Menu Item for Pairing Ignore Rules -->
    <menuitem 
        id="menu_pairing_ignore_rules"
        name="Pravidlá na ignorovanie"
        parent="account.menu_finance_payables"
        action="action_pairing_ignore_rules"
        sequence="61"/>
</odoo>
