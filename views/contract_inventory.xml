<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Contract Inventory Form View -->
    <record id="contract_inventory_form_view" model="ir.ui.view">
        <field name="name">contract.inventory.form.view</field>
        <field name="model">contract.inventory</field>
        <field name="arch" type="xml">
            <form string="Skladovanie inventára">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_contract_inventory_bulk_return_wizard)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-truck"
                                string="Vrátiť produkty"/>
                        <button name="toggle_active" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-archive">
                            <field name="active" widget="boolean_button" 
                                options="{'terminology': 'archive'}"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="napr. Hlavný sklad"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="warehouse_id" options="{'no_create': True}" required="1"/>
                            <field name="partner_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="total_products"/>
                        </group>
                    </group>
                    <notebook>
                      
                        <page string="Inventárne riadky" name="inventory_lines">
                            <field name="inventory_line_ids" widget="one2many">
                                <list string="Inventárne riadky" editable="bottom">
                                    <field name="product_id"/>
                                    <field name="location_id" domain="[('inventory_id', '=', parent.id)]"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="warehouse_id" options="{'no_create': True}"/>
                                    <field name="contract_line_id"/>
                                    <field name="contract_id"/>
                                    <field name="serial_number"/>
                                    <field name="date_added"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                          <page string="Miesta" name="locations">
                            <field name="location_ids">
                                <list editable="bottom">
                                    <field name="name" string="Názov miesta"/>
                                </list>
                            </field>
                        </page>
                        <page string="Zmluvy" name="contracts">
                            <field name="contract_ids" readonly="1">
                                <list string="Zmluvy">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="partner_id"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                </list>
                            </field>
                        </page>
                        <page string="Poznámky" name="notes">
                            <field name="note" placeholder="Interné poznámky..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Contract Inventory list View -->
    <record id="contract_inventory_list_view" model="ir.ui.view">
        <field name="name">contract.inventory.list.view</field>
        <field name="model">contract.inventory</field>
        <field name="arch" type="xml">
            <list string="Skladovanie inventára">
                <field name="name"/>
                <field name="code"/>
                <field name="warehouse_id"/>
                <field name="partner_id"/>
                <field name="total_products"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Contract Inventory Search View -->
    <record id="contract_inventory_search_view" model="ir.ui.view">
        <field name="name">contract.inventory.search.view</field>
        <field name="model">contract.inventory</field>
        <field name="arch" type="xml">
            <search string="Hľadať skladovanie inventára">
                <field name="name"/>
                <field name="code"/>
                <field name="partner_id"/>
                <separator/>
                <filter string="Archivované" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Zoskupiť podľa">
                    <filter string="Partner" name="group_by_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Spoločnosť" name="group_by_company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Contract Inventory Line list View -->
    <record id="contract_inventory_line_list_view" model="ir.ui.view">
        <field name="name">contract.inventory.line.list.view</field>
        <field name="model">contract.inventory.line</field>
        <field name="arch" type="xml">
            <list string="Inventárne riadky">
                <field name="inventory_id"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="uom_id"/>
                <field name="contract_line_id"/>
                <field name="contract_id"/>
                <field name="serial_number"/>
                <field name="date_added"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Contract Inventory Line Form View -->
    <record id="contract_inventory_line_form_view" model="ir.ui.view">
        <field name="name">contract.inventory.line.form.view</field>
        <field name="model">contract.inventory.line</field>
        <field name="arch" type="xml">
            <form string="Inventárny riadok">
                <sheet>
                    <group>
                        <group>
                            <field name="inventory_id"/>
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="uom_id"/>
                        </group>
                        <group>
                            <field name="contract_line_id"/>
                            <field name="contract_id"/>
                            <field name="serial_number"/>
                            <field name="date_added"/>
                            <field name="state"/>
                        </group>
                    </group>
                    <group string="Poznámky">
                        <field name="note" nolabel="1" placeholder="Pridajte poznámky..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Contract Inventory Line Search View -->
    <record id="contract_inventory_line_search_view" model="ir.ui.view">
        <field name="name">contract.inventory.line.search.view</field>
        <field name="model">contract.inventory.line</field>
        <field name="arch" type="xml">
            <search string="Hľadať inventárne riadky">
                <field name="product_id"/>
                <field name="inventory_id"/>
                <field name="contract_id"/>
                <field name="serial_number"/>
                <separator/>
                <filter string="Dostupné" name="available" domain="[('state', '=', 'available')]"/>
                <filter string="Priradené" name="assigned" domain="[('state', '=', 'assigned')]"/>
                <filter string="Vrátené" name="returned" domain="[('state', '=', 'returned')]"/>
                <group expand="0" string="Zoskupiť podľa">
                    <filter string="Inventár" name="group_by_inventory" context="{'group_by': 'inventory_id'}"/>
                    <filter string="Produkt" name="group_by_product" context="{'group_by': 'product_id'}"/>
                    <filter string="Zmluva" name="group_by_contract" context="{'group_by': 'contract_id'}"/>
                    <filter string="Stav" name="group_by_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Contract Inventory -->
    <record id="action_contract_inventory" model="ir.actions.act_window">
        <field name="name">Skladovanie inventára</field>
        <field name="res_model">contract.inventory</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Vytvorte nové skladovanie inventára
            </p>
            <p>
                Organizujte produkty zo zmlúv v skladových priestoroch.
            </p>
        </field>
    </record>

    <!-- Action for Contract Inventory Lines -->
    <record id="action_contract_inventory_line" model="ir.actions.act_window">
        <field name="name">Inventárne produkty</field>
        <field name="res_model">contract.inventory.line</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Neboli nájdené žiadne inventárne produkty
            </p>
            <p>
                Inventárne produkty sa automaticky vytvárajú, keď sú riadky zmluvy označené na sledovanie inventára.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_contract_inventory" 
              name="Skladové miesta" 
              action="action_contract_inventory" 
              parent="contract.menu_contract_inventory_root" 
              sequence="1"/>

    <menuitem id="menu_contract_inventory_lines" 
              name="Inventárne produkty" 
              action="action_contract_inventory_line" 
              parent="contract.menu_contract_inventory_root" 
              sequence="2"/>
</odoo>
