<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Pairing Rule Tree View -->
    <record id="view_product_pairing_rule_list" model="ir.ui.view">
        <field name="name">product.pairing.rule.list</field>
        <field name="model">product.pairing.rule</field>
        <field name="arch" type="xml">
            <list string="Pravidlá párovania produktov" decoration-muted="not active">
                <field name="name"/>
                <field name="product_id"/>
                <field name="supplier_id"/>
                <field name="usage_count"/>
                <field name="last_used_date"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Product Pairing Rule Form View -->
    <record id="view_product_pairing_rule_form" model="ir.ui.view">
        <field name="name">product.pairing.rule.form</field>
        <field name="model">product.pairing.rule</field>
        <field name="arch" type="xml">
            <form string="Pravidlo párovania">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="product_id"/>
                        </group>
                        <group>
                            <field name="supplier_id"/>
                            <field name="usage_count"/>
                            <field name="last_used_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Product Pairing Rule Search View -->
    <record id="view_product_pairing_rule_search" model="ir.ui.view">
        <field name="name">product.pairing.rule.search</field>
        <field name="model">product.pairing.rule</field>
        <field name="arch" type="xml">
            <search string="Vyhľadať pravidlá párovania">
                <field name="name"/>
                <field name="product_id"/>
                <field name="supplier_id"/>
                <filter string="Aktívne" name="active" domain="[('active', '=', True)]"/>
                <filter string="Neaktívne" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Zoskupiť podľa">
                    <filter string="Produkt" name="group_product" context="{'group_by': 'product_id'}"/>
                    <filter string="Dodávateľ" name="group_supplier" context="{'group_by': 'supplier_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Product Pairing Rule Action -->
    <record id="action_product_pairing_rule" model="ir.actions.act_window">
        <field name="name">Pravidlá párovania produktov</field>
        <field name="res_model">product.pairing.rule</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Vytvorte pravidlo párovania produktov
            </p>
            <p>
                Pravidlá párovania sa používajú na automatické priradenie produktov k riadkom faktúr
                na základe popisu z faktúry dodávateľa.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem 
        id="menu_product_pairing_rule"
        name="Párovanie produktov"
        parent="account.menu_finance_payables"
        action="action_product_pairing_rule"
        sequence="50"/>

</odoo>
