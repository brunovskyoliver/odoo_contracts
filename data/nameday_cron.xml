<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Cron Job for Nameday Checks -->
        <record id="ir_cron_nameday_check" model="ir.cron">
            <field name="name">Check Namedays</field>
            <field name="model_id" ref="model_nameday_nameday"/>
            <field name="state">code</field>
            <field name="code">model._send_nameday_emails()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
        </record>

        <!-- Cron Job for Loading Namedays (yearly) -->
        <record id="ir_cron_load_namedays" model="ir.cron">
            <field name="name">Load Namedays for New Year</field>
            <field name="model_id" ref="model_nameday_nameday"/>
            <field name="state">code</field>
            <field name="code">model._load_namedays()</field>
            <field name="interval_number">12</field>
            <field name="interval_type">months</field>
        </record>
    </data>
</odoo>
