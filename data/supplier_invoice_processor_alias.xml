<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Ensure catchall domain is set -->
        <record id="mail_catchall_domain_novem" model="ir.config_parameter">
            <field name="key">mail.catchall.domain</field>
            <field name="value">novem.sk</field>
        </record>
        
        <!-- Mail Alias for Supplier Invoice Processor -->
        <record id="mail_alias_supplier_invoice" model="mail.alias">
            <field name="alias_name">dodavatel</field>
            <field name="alias_model_id" ref="model_supplier_invoice_processor"/>
            <field name="alias_defaults">{'state': 'draft'}</field>
            <field name="alias_contact">everyone</field>
            <field name="alias_force_thread_id" eval="0"/>
            <field name="alias_parent_model_id" ref="model_supplier_invoice_processor"/>
            <field name="alias_parent_thread_id" eval="0"/>
        </record>
    </data>
</odoo>
