<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron job for checking mobile service usage patterns -->
        <record id="ir_cron_check_mobile_usage_patterns" model="ir.cron">
            <field name="name">Check Mobile Service Usage Patterns</field>
            <field name="model_id" ref="model_contract_mobile_usage_report"/>
            <field name="state">code</field>
            <field name="code">model.check_service_usage_patterns()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
        </record>
    </data>
</odoo>