<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="email_template_hours_warning" model="mail.template">
            <field name="name">Available Hours Warning</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="subject">Warning: Available Hours Running Low</field>
            <field name="email_from">{{ user.email_formatted }}</field>
            <field name="partner_to">{{ object.id }}</field>
            <field name="lang">{{ object.lang }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${object.name},
                        <br/><br/>
                        This is to inform you that your annual available hours are running low.
                        <br/><br/>
                        Current available hours: ${object.x_annual_available_hours}
                        <br/>
                        Total annual free hours: ${object.x_annual_free_hours}
                        <br/><br/>
                        Please contact us to discuss your hours usage.
                        <br/><br/>
                        Best regards,
                        <br/>
                        ${user.company_id.name}
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>
