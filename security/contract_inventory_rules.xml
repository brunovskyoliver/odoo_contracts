<odoo>
    <!-- Global rule for contract.inventory - allows full access to all records -->
    <record id="rule_contract_inventory_global" model="ir.rule">
        <field name="name">Contract Inventory: Full Access to All Records</field>
        <field name="model_id" ref="model_contract_inventory"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('contract.group_contract_inventory_only'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

